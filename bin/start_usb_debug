#!/bin/bash
# Start USB Explorer server

set -e

# Load common configuration
source "$(dirname "${BASH_SOURCE[0]}")/common.sh"

cd "$PROJECT_DIR"

# Check if already running
if [ -f "$PID_FILE" ]; then
    OLD_PID=$(cat "$PID_FILE")
    if kill -0 "$OLD_PID" 2>/dev/null; then
        echo "USB Explorer is already running (PID: $OLD_PID)"
        echo "Use stop_usb_debug to stop it first"
        exit 1
    else
        rm -f "$PID_FILE"
    fi
fi

# Check for sudo (required for full USB access)
if [ "$EUID" -ne 0 ]; then
    echo "Warning: Running without root privileges."
    echo "Some features (device reset) may not work."
    echo "Consider running with: sudo $0"
    echo ""
fi

# Add src to PYTHONPATH
export PYTHONPATH="$PROJECT_DIR/src:$PYTHONPATH"

# Set environment variables
export USB_DEBUG_HOST
export USB_DEBUG_PORT

if [ "$USB_DEBUG_OPEN_BROWSER" = "0" ] || [ "$USB_DEBUG_OPEN_BROWSER" = "false" ]; then
    export USB_DEBUG_NO_BROWSER=1
fi

echo "Starting USB Explorer on http://$USB_DEBUG_HOST:$USB_DEBUG_PORT"

# Start server
python3 -m usb_explorer.main &
SERVER_PID=$!

echo $SERVER_PID > "$PID_FILE"
echo "Server started (PID: $SERVER_PID)"

# Wait a moment and check if it's running
sleep 1
if ! kill -0 "$SERVER_PID" 2>/dev/null; then
    echo "Error: Server failed to start"
    rm -f "$PID_FILE"
    exit 1
fi

echo "USB Explorer is running at http://localhost:$USB_DEBUG_PORT"
