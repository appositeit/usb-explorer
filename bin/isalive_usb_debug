#!/bin/bash
# Check if USB Explorer is running

# Load common configuration
source "$(dirname "${BASH_SOURCE[0]}")/common.sh"

# Check PID file
if [ -f "$PID_FILE" ]; then
    PID=$(cat "$PID_FILE")
    if kill -0 "$PID" 2>/dev/null; then
        # Also check HTTP endpoint
        if curl -s "http://localhost:$USB_DEBUG_PORT/api/health" > /dev/null 2>&1; then
            echo "USB Explorer is running (PID: $PID, Port: $USB_DEBUG_PORT)"
            exit 0
        else
            echo "Process running but HTTP not responding (PID: $PID)"
            exit 1
        fi
    fi
fi

# Check by process name
if pgrep -f "usb_explorer.main" > /dev/null; then
    echo "USB Explorer is running (found by process name)"
    exit 0
fi

echo "USB Explorer is not running"
exit 1
